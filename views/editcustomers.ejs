<%- include("head", {Title: "Edit Customers"}) %>

<body>

        <div class="container">
            <h1>Edit Customer</h1>
            <div class="table-container">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>Date of Birth</th>
                            <th>Gender</th>
                            <th>Option</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach((item)=> { %>
                            <tr>
                                <td>
                                    <%= item.customer_id %>
                                </td>
                                <td>
                                    <%= item.first_name %>
                                </td>
                                <td>
                                    <%= item.last_name %>
                                </td>
                                <td>
                                    <%= item.phone %>
                                </td>
                                <td>
                                    <%= item.email %>
                                </td>
                                <td>
                                    <%= item.address %>
                                </td>
                                <td>
                                    <%= item.dob %>
                                </td>
                                <td>
                                    <%= item.gender %>
                                </td>
                                <td class="op">
                                    <a href="/get_edit?id=<%=item.customer_id%>">
                                        <button class="btn btn-primary">edit</button>
                                    </a>
                                    <a href="/get_delete?id=<%=item.customer_id%>">
                                        <button class="btn btn-danger">delete</button>
                                    </a>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
        </div>

    </body>