<%- include("head", {Title: "Edit Customers"}) %>
<style>
    .container {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

    h1 {
        color: #2c3e50; /* สีเข้มเพื่อความชัดเจน */
        text-align: center;
        margin-bottom: 20px;
    }

    .table-container {
        overflow-x: auto; 
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    .table th, .table td {
        padding: 12px;
        text-align: center;
        border: 1px solid #ddd;
    }

    .table th {
        background-color: #3498db; /* สีฟ้าสดใส */
        color: #ffffff;
    }

    .table tr:nth-child(even) {
        background-color: #f2f2f2; /* สีพื้นหลังสลับกัน */
    }

    .table tr:hover {
        background-color: #e2e2e2; /* สีพื้นหลังเมื่อ hover */
    }

    .btn-primary {
        background-color: #3498db; /* สีฟ้าสดใส */
        border: none;
        padding: 8px 16px;
        font-size: 14px;
        border-radius: 5px;
        cursor: pointer;
        color: #ffffff;
        text-decoration: none;
    }

    .btn-primary:hover {
        background-color: #2980b9; /* สีฟ้าเข้มเมื่อ hover */
    }

    .btn-danger {
        background-color: #dc3545; /* สีแดงสดใส */
        border: none;
        padding: 8px 16px;
        font-size: 14px;
        border-radius: 5px;
        cursor: pointer;
        color: #ffffff;
        text-decoration: none;
    }

    .btn-danger:hover {
        background-color: #c82333; /* สีแดงเข้มเมื่อ hover */
    }

    .op {
        display: flex;
        gap: 10px; /* ระยะห่างระหว่างปุ่ม */
        justify-content: center;
    }
</style>

<body>
    <div class="container">
        <h1>Edit Customer</h1>
        <div class="table-container">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Address</th>
                        <th>Date of Birth</th>
                        <th>Gender</th>
                        <th>Option</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach((item)=> { %>
                        <tr>
                            <td><%= item.customer_id %></td>
                            <td><%= item.first_name %></td>
                            <td><%= item.last_name %></td>
                            <td><%= item.phone %></td>
                            <td><%= item.email %></td>
                            <td><%= item.address %></td>
                            <td><%= item.dob %></td>
                            <td><%= item.gender %></td>
                            <td class="op">
                                <a href="/get_edit?id=<%=item.customer_id%>">
                                    <button class="btn btn-primary">Edit</button>
                                </a>
                                <a href="/get_delete?id=<%=item.customer_id%>">
                                    <button class="btn btn-danger">Delete</button>
                                </a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>