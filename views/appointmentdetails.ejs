<%- include("head", {Title: "My Appointments"}) %>

<body>
    <div class="container mt-5">
        <h2>Appointments for <%= customer.first_name %> <%= customer.last_name %></h2>

        <% if (appointments.length > 0) { %>
            <table class="table table-bordered mt-3">
                <thead class="thead-dark">
                    <tr>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Dentist</th>
                        <th>Employee</th>
                        <th>Status</th>
                        <th>Notes</th>
                    </tr>
                </thead>
                <tbody>
                    <% appointments.forEach((appointment) => { %>
                    <tr>
                        <td><%= appointment.appointment_date %></td>
                        <td><%= appointment.appointment_time %></td>
                        <td><%= appointment.dentist_first_name %> <%= appointment.dentist_last_name %></td>
                        <td><%= appointment.employee_first_name %> <%= appointment.employee_last_name %></td>
                        <td><%= appointment.status %></td>
                        <td><%= appointment.notes || 'No notes' %></td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-muted">No appointments found.</p>
        <% } %>

        <a href="/" class="btn btn-secondary">Back to Home</a>
    </div>
</body>
</html>
