<%- include("head", {Title: "Book Appointments"}) %>

<body>
    <%- include("nav", {session: session}) %>
    <div class="container mt-5">
        <h2>Confirm Appointment</h2>
    
        <p>Are you sure you want to book an appointment on <strong><%= appointment_date %></strong>?</p>
    
        <form action="/confirmbooking" method="post">
            <!-- เลือกลูกค้า -->
            <div class="form-group">
                <label for="customer_id">Select Customer:</label>
                <select class="form-control" id="customer_id" name="customer_id" required>
                    <% customers.forEach((customer) => { %>
                        <option value="<%= customer.customer_id %>">
                            <%= customer.first_name %> <%= customer.last_name %>
                        </option>
                    <% }); %>
                </select>
            </div>
    
            <!-- เลือกหมอ -->
            <div class="form-group">
                <label for="dentist_id">Select Dentist:</label>
                <select class="form-control" id="dentist_id" name="dentist_id" required>
                    <% dentists.forEach((dentist) => { %>
                        <option value="<%= dentist.dentist_id %>">
                            <%= dentist.first_name %> <%= dentist.last_name %>
                        </option>
                    <% }); %>
                </select>
            </div>
    
            <!-- เลือกเวลานัดหมาย -->
            <div class="form-group">
                <label for="appointment_time">Select Time:</label>
                <input type="time" class="form-control" id="appointment_time" name="appointment_time" required>
            </div>
    
            <input type="hidden" name="appointment_date" value="<%= appointment_date %>">
    
            <button type="submit" class="btn btn-primary">Confirm Booking</button>
        </form>
    </div>
    
    
    
</body>
</html>
