<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="icon" href="/image/testImage.jpg" type="image/x-icon" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        h1 {
            text-align: center;
            margin-top: 20px;
            color: #343a40;
        }

        form {
            max-width: 400px;
            margin: 50px auto;
            padding: 20px;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-group label {
            font-weight: bold;
            color: #495057;
        }

        .form-control {
            border-radius: 4px;
            border: 1px solid #ced4da;
            padding: 10px;
            font-size: 16px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 4px;
            cursor: pointer;
            width: 100%;
            margin-bottom: 10px;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-secondary {
            background-color: #6c757d;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 4px;
            cursor: pointer;
            width: 100%;
            margin-bottom: 10px;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

        .switch-button {
            background-color: #28a745;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 4px;
            cursor: pointer;
            width: 100%;
            margin-bottom: 10px;
        }

        .switch-button:hover {
            background-color: #218838;
        }
    </style>
</head>

<body>
    <h1>Login Form</h1>
    <form action="/login_get" method="get">
        <div id="loginlb">
            <div class="form-group">
                <label for="username">Username: </label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Enter your username">
            </div>
            <div class="form-group">
                <label for="password">Password: </label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password">
            </div>
        </div>
        <input type="hidden" id="loginType" name="loginType" value="username">
        <button type="button" id="Switch" class="switch-button" onclick="SWemail()">Login with Email</button>
        <button type="submit" class="btn-primary">Sign-in</button>  
    </form>

    <script>
        function SWemail() {
            let passwordValue = document.getElementById("password").value; // ดึงค่าที่กรอกไว้
            document.getElementById("loginlb").innerHTML = `
                <div class="form-group">
                    <label for="email">Email: </label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email">
                </div>
                <div class="form-group">
                    <label for="password">Password: </label>
                    <input type="password" class="form-control" id="password" name="password" value="${passwordValue}" placeholder="Enter your password">
                </div>
            `;
            document.getElementById("Switch").innerHTML = 'Login with Username';
            document.getElementById("loginType").value = "email";
            document.getElementById("Switch").onclick = SWuser;
        }

        function SWuser() {
            let passwordValue = document.getElementById("password").value;
            document.getElementById('loginlb').innerHTML = `
                <div class="form-group">
                    <label for="username">Username: </label>
                    <input type="text" class="form-control" id="username" name="username" placeholder="Enter your username">
                </div>
                <div class="form-group">
                    <label for="password">Password: </label>
                    <input type="password" class="form-control" id="password" name="password" value="${passwordValue}" placeholder="Enter your password">
                </div>
            `;
            document.getElementById("Switch").innerHTML = 'Login with Email';
            document.getElementById("loginType").value = "username";
            document.getElementById("Switch").onclick = SWemail;
        }
    </script>
</body>

</html>