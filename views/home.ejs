<%- include("head", {Title: "Home" }) %>

  <body style="background-color: #f0f8ff; font-family: Arial, sans-serif;">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="3000">


      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner"
        style="height: 500px; width: 80%; margin: 0 auto; overflow: hidden; border-radius: 10px; box-shadow: 0px 4px 10px rgba(0,0,0,0.1);">
        <div class="carousel-item active" style="height: 100%;">
          <img class="d-block w-100" src="/image/slide1.png" alt="First slide"
            style="width: 100%; height: 500px; object-fit: cover;">
        </div>
        <div class="carousel-item" style="height: 100%;">
          <img class="d-block w-100" src="/image/slide2.png" alt="Second slide"
            style="width: 100%; height: 500px; object-fit: cover;">
        </div>
        <div class="carousel-item" style="height: 100%;">
          <img class="d-block w-100" src="/image/slide3.png" alt="Third slide"
            style="width: 100%; height: 500px; object-fit: cover;">
        </div>
      </div>
    </div>

    <div class="card"
      style="padding: 2em; margin-top: 50px; margin-left: auto; margin-right: auto; width:80%; background-color:#e3f2fd; border-radius: 10px; box-shadow: 0px 4px 10px rgba(0,0,0,0.1);">
      <div class="card-header text-white" style="background-color: #2196F3; border-radius: 10px;">
        <h2>Welcome to DenT <i class="fas fa-tooth"></i></h2>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <p style="font-size: 18px; color: #333;">
              <b style="font-size: 22px;">Clinic DenT</b> is the premier dental facility, recognized as an authority in
              dental implantology and fixed oral rehabilitation for both fully and partially edentulous patients. Our
              clinic has pioneered a range of innovations and technological breakthroughs that have set the standard in
              modern dental implant procedures. With a highly trained team of dental specialists, exclusive access to
              state-of-the-art research and development facilities, and thousands of documented successful cases in
              Thailand since 2003, Clinic DenT continues to redefine excellence in dental care. We are dedicated to
              enhancing smiles and transforming lives through advanced, patient-centered dental solutions.
            </p>
          </div>
          <div class="col-md-6 text-center">
            <img src="/image/place.png" class="img-fluid" alt="Clinic DenT"
              style="border-radius: 10px; box-shadow: 0px 4px 10px rgba(0,0,0,0.1);">
          </div>
        </div>
      </div>
    </div>

    <div class="card"
      style="padding: 2em; margin: 50px auto; width:80%; background-color:#e3f2fd; border-radius: 10px; box-shadow: 0px 4px 10px rgba(0,0,0,0.1);">
      <div class="card-header text-white" style="background-color: #2196F3; border-radius: 10px;">
        <h2>Our Dentists <i class="fas fa-user-md"></i></h2>
      </div>
      <div class="card-body">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <div class="card-deck">
                <div class="card">
                  <img class="card-img-top img-fluid" src="/image/Doc1.jpg" alt="Dentist"
                    style="height: 800px; object-fit: cover; border-radius: 10px;">
                  <div class="card-body text-center">
                    <h5 class="card-title">Black Jack</h5>
                    <p class="card-text">Expert in Dental Surgery</p>
                    <p class="card-text"><small class="text-muted">Dentist</small></p>
                  </div>
                </div>
                <div class="card">
                  <img class="card-img-top img-fluid" src="/image/Doc2.jpg" alt="Dentist"
                    style="height: 800px  ; object-fit: cover; border-radius: 10px;">
                  <div class="card-body text-center">
                    <h5 class="card-title">Herbert Ludwig</h5>
                    <p class="card-text">Specialist in Orthodontics</p>
                    <p class="card-text"><small class="text-muted">Dentist Chief</small></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <style>
      body {
        background-color: #f0f8ff;
      }

      .card {
        transition: transform 0.3s ease-in-out;
      }

      .card:hover {
        transform: scale(1.03);
      }

      .carousel-control-prev,
      .carousel-control-next {
        filter: invert(100%);
      }
    </style>
    <script>
      $(document).ready(function () {
        $('#carouselExampleIndicators').carousel({
          interval: 3000,  // 3 วินาที
          pause: "false"   // ไม่หยุดแม้เมาส์วางบน slide
        });
      });
    </script>
  </body>