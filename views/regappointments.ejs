<%- include("head", {Title: "View Appointments"}) %>

<body>
    <%- include("nav", {session: session}) %>
    <div class="container mt-5">
        <h2>Appointment Availability</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% 
                    let today = new Date();
                    let bookedDates = data.map(item => item.appointment_date);
                    
                    for (let i = 0; i < 30; i++) {  
                        let date = new Date();
                        date.setDate(today.getDate() + i);
                        let dateString = date.toISOString().split('T')[0];
            
                        let isBooked = bookedDates.includes(dateString);
                %>
                <tr class="<%= isBooked ? 'table-danger' : 'table-success' %>">
                    <td><%= dateString %></td>
                    <td><%= isBooked ? 'Booked' : 'Available' %></td>
                    <td>
                        <% if (!isBooked) { %>
                            <a href="/bookappointments?date=<%= dateString %>" class="btn btn-primary">Book</a>
                        <% } else { %>
                            <button class="btn btn-secondary" disabled>Booked</button>
                        <% } %>
                    </td>
                </tr>
                <% } %>
            </tbody>
            
        </table>
    </div>
    <script>
        function bookAppointment(date) {
            $.post("/bookappointments", { appointment_date: date }, function(response) {
                alert(response.message);
                location.reload(); // รีเฟรชหน้าหลังจองสำเร็จ
            }); 
        }
    </script>
</body>

</html>
